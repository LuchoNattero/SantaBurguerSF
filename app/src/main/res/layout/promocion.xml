<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginTop="4dp"
        android:id="@+id/tv_promocion"
        android:text="  PROMOCIÃ“N"
        android:textSize="20dp"
        android:background="@color/color_morado"
        android:textColor="@color/color_piel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"/>

    <ImageView
        android:id="@+id/im_promocion"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/tv_promocion"
        android:scaleType="centerCrop"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp"
        />

    <TextView
        android:id="@+id/nombre_promocion_hamburguesa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/im_promocion"
        android:layout_alignParentStart="true"
        android:maxLines="1"
        android:padding="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@android:color/white"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/sombra"
        android:layout_above="@+id/im_promocion"
        android:layout_marginHorizontal="5dp"

        />

</RelativeLayout>